#!/usr/bin/env bash

scratchpad_dir="/home/gerb/uni/scratchpad"
file_name=$(date "+%a-%d-%m-%y.md" | tr '[:upper:]' '[:lower:]')
time_stamp=$(date "+%H:%M")


if [[ -f $scratchpad_dir/$file_name ]]; then
	# File Exists
	# Check whether the time stamp is already in the file or not
	result=$(grep "$time_stamp" $scratchpad_dir/$file_name)
	if [[ -z "$result" ]]; then
		nvim $scratchpad_dir/$file_name +"set wrap"\
			-c "cd $scratchpad_dir" \
			-c "norm Go" \
			-c "norm Go$time_stamp" \
			-c "norm Go"
	else 
		nvim $scratchpad_dir/$file_name +"set wrap"\
			-c "cd $scratchpad_dir" \
			-c "norm Go"
	fi

else
	# File does not exist
	title=$(date "+%A %d/%m/%y")
	nvim $scratchpad_dir/$file_name +"set wrap"\
		-c "cd $scratchpad_dir" \
		-c "norm Go$time_stamp" \
		-c "norm Go"
fi

